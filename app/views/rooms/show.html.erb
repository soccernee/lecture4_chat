<h1> Room: <%= @room.name %></h1>

<div class="messages list-group">
  <%= render @messages %>
</div>

<%= form_for [@room, Message.new], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: current_user, class: 'form-control' %>
  </div>

  <%= f.submit nil, class: 'btn btn-secondary' %>
<% end %>

<script type="text/javascript">
  function reload() {
    $.get('<%= room_messages_path(@room, format: :js) %>', function(response) {
      console.log("got data back! ", response);
    });
  }
  setInterval(reload, 5000);
</script>